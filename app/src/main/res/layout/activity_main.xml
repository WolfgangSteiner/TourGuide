<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.tourguide.MainActivity">

    <TextView
        android:id="@+id/parks_button"
        style="@style/CategoryStyle"
        android:background="@color/category_parks"
        android:text="@string/category_parks" />

    <TextView
        android:id="@+id/monuments_button"
        style="@style/CategoryStyle"
        android:background="@color/category_monuments"
        android:text="@string/category_monuments" />

    <TextView
        android:id="@+id/museums_button"
        style="@style/CategoryStyle"
        android:background="@color/category_museums"
        android:text="@string/category_museums" />

    <TextView
        android:id="@+id/sights_button"
        style="@style/CategoryStyle"
        android:background="@color/category_sights"
        android:text="@string/category_sights" />

</LinearLayout>
